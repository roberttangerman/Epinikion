@inherits Umbraco.Web.Mvc.UmbracoViewPage<Umbraco.Web.PublishedModels.Home>
@using Epinikion.Core.Extensions

@{
	Layout = "Master.cshtml";
    
    var latestVideo = Model.Value<string>("latestVideo");
    var youTubeChannel = Model.Value<string>("youTubeChannelLink");
}

@Html.GetGridHtml(Model, "mainContent", "Clean", true, true)

@Html.Partial("~/Views/Partials/showsList.cshtml")

@Html.Partial("~/Views/Partials/articlesList.cshtml")

<div class="row my-4">
    <div class="col-8 pe-0">
        <iframe width="100%" height="410" src="@latestVideo" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>
    <div class="col-4 d-flex flex-column align-items-center justify-content-center">
        <h2 class="display-3">@Umbraco.GetDictionaryValue("HomePage.LatestVideo")</h2>
        <p><a class="btn btn-outline-light" href="@youTubeChannel">@Umbraco.GetDictionaryValue("SubscribeYouTube")</a></p>
    </div>
</div>
