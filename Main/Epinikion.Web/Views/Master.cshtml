@inherits UmbracoViewPage
@{
    Layout = null;

    var image = Model.Value<IPublishedContent>("backgroundImage", fallback: Fallback.ToAncestors);

    var imageUrl = "";
    if (image != null)
    {
        imageUrl = image.GetCropUrl(1920);
    }

}

<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>@Umbraco.GetDictionaryValue("Main.Title")</title>
    <meta name="description" content="">
    <meta name="author" content="">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap&#64;5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/93c8d7f41c.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="@Url.Content("/css/style.css")"/>

    <link rel="preload" as="font" href=@Url.Content("/fonts/zephyr_grunge-webfont.woff2") type="font/woff2" crossorigin="anonymous">
    <link rel="preload" as="font" href=@Url.Content("/fonts/zephyr_grunge-webfont.woff") type="font/woff" crossorigin="anonymous">

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-21316482-4"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-21316482-4');
    </script>
</head>

<body>
<div class="background-img" style="background-image: url(@imageUrl)">
    <div class="header">
        @Html.Partial("~/Views/Partials/navigation.cshtml")
    </div>
    <div class="container">
        <div class="content">
            @RenderBody()
        </div>
    </div>

    @Html.Partial("~/Views/Partials/footer.cshtml")

</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap&#64;5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
</body>

</html>
